<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <h1 class="display-4">MUSIC DATABASE</h1>
      <p class="lead"><%= Album.count %> albums — <%= Artist.count %> artists — <%= Genre.count %> genres</p>
      <hr class="my-4">
      <p style="font-weight: 300; font-size: 1.1rem;">Search through our comprehensive music database, discover new artists, and read reviews from music enthusiasts.</p>
      <div class="mt-4">
        <%= link_to "Browse Albums", albums_path, class: "btn btn-primary btn-lg me-3" %>
        <%= link_to "View Artists", artists_path, class: "btn btn-secondary btn-lg" %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Albums</h5>
        <p class="card-text" style="font-weight: 300;"><%= Album.count %> albums with ratings and reviews</p>
        <%= link_to "View All →", albums_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Artists</h5>
        <p class="card-text" style="font-weight: 300;"><%= Artist.count %> artists from around the world</p>
        <%= link_to "View All →", artists_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Genres</h5>
        <p class="card-text" style="font-weight: 300;"><%= Genre.count %> different music genres</p>
        <%= link_to "View All →", genres_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>

<% if Album.popular.any? %>
  <div class="row mt-5">
    <div class="col-md-12">
      <h2>Popular Albums</h2>
      <hr>
      <div class="row">
        <% Album.popular.limit(3).each do |album| %>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= link_to album.title, album_path(album) %></h5>
                <p class="card-text text-muted" style="font-weight: 300;"><%= album.artist.name %></p>
                <span class="badge bg-primary"><%= album.popularity_score %>/100</span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
