<div class="row">
  <div class="col-md-12">
    <h1><%= @genre.name %></h1>
    
    <% if @genre.description %>
      <div class="card mt-3">
        <div class="card-body">
          <p><%= @genre.description %></p>
        </div>
      </div>
    <% end %>
    
    <h3 class="mt-4">Albums in this Genre (<%= @genre.albums.count %>)</h3>
    <% if @albums.any? %>
      <div class="row">
        <% @albums.each do |album| %>
          <div class="col-md-6 col-lg-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= link_to album.title, album_path(album) %></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  <%= link_to album.artist.name, artist_path(album.artist) %>
                </h6>
                <% if album.release_date %>
                  <p class="card-text"><small class="text-muted">Released: <%= album.release_date.year %></small></p>
                <% end %>
                <% if album.popularity_score %>
                  <p class="card-text">
                    <span class="badge bg-primary">Popularity: <%= album.popularity_score %>/100</span>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @albums %>
      </div>
    <% else %>
      <p class="text-muted">No albums found in this genre.</p>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= link_to "â† Back to Genres", genres_path, class: "btn btn-secondary" %>
</div>
